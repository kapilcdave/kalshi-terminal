# Kalshi API Key ID (from your Kalshi dashboard)
KALSHI_API_KEY=your_api_key_id_here

# Path to your RSA private key file (downloaded when you created the API key)
KALSHI_PRIVATE_KEY_FILE=./your_private_key.pem

# Environment: "demo" for paper trading, "prod" for real money
KALSHI_ENV=demo

# Polymarket L2 API Credentials (from Builder Settings in Profile)
POLYMARKET_API_KEY=your_poly_api_key
POLYMARKET_API_SECRET=your_poly_api_secret
POLYMARKET_API_PASSPHRASE=your_poly_api_passphrase

# Polymarket L1 Private Key (Polygon wallet private key)
# Required for signing orders and deriving L2 keys
POLYMARKET_PRIVATE_KEY=your_polygon_private_key

# Anthropic Claude API Key (for Clawdbot agent)
ANTHROPIC_API_KEY=your_anthropic_api_key
