/* PredictionTerminal - Claude x Bloomberg Hybrid Aesthetic */

/* Primary Palette */
$bg-primary: #1e1e2e;
$bg-header: #11111b;
$bg-panel: #181825;
$text-main: #cdd6f4;
$text-secondary: #bac2de;
$text-muted: #6e738d;
$border-color: #313244;
$accent-yellow: #f9e2af;
$accent-green: #a6e3a1;
$accent-red: #f38ba8;
$accent-blue: #89b4fa;
$accent-cyan: #89dceb;

PredictionTerminal {
    background: $bg-primary;
    color: $text-main;
    font-family: "JetBrains Mono", "Fira Code", monospace;
}

/* Header Ticker */
#ticker-container {
    height: 1;
    background: $bg-header;
    color: $accent-cyan;
    dock: top;
    padding: 0 1;
    border-bottom: solid $border-color;
}

#ticker-scroll {
    color: $text-secondary;
    text-style: bold;
}

/* Main Layout */
#main-layout {
    layout: vertical;
    padding: 0;
}

/* Data Grid Area */
#market-table {
    height: 1fr;
    background: $bg-primary;
    border: none;
    margin: 0;
}

.datatable--header {
    background: $bg-panel;
    color: $accent-yellow;
    text-style: bold;
}

.datatable--cursor {
    background: rgba(137, 180, 250, 0.2); /* Subtle blue highlight */
    color: $text-main;
}

.datatable--row:hover {
    background: rgba(137, 180, 250, 0.1);
}

/* Clawdbot Status Bar */
#clawdbot-bar {
    height: 1;
    background: $bg-panel;
    color: $accent-green;
    padding: 0 1;
    border-top: solid $border-color;
    border-bottom: solid $border-color;
}

#clawdbot-logo {
    color: $accent-red;
    text-style: bold;
    margin-right: 1;
}

/* Footer / Key Bindings */
Footer {
    background: $bg-panel;
    color: $text-muted;
    border-top: solid $border-color;
    height: 1;
}

Footer > .footer--key {
    color: $accent-yellow;
    text-style: bold;
    background: transparent;
}

Footer > .footer--description {
    color: $text-secondary;
}

/* Utility Classes for Cell Highlighting */
.prob-high { color: $accent-green; }
.prob-mid { color: $accent-yellow; }
.prob-low { color: $accent-red; }
.delta-pos { color: $accent-green; }
.delta-neg { color: $accent-red; }

/* Command Input */
#command-bar {
    height: 1;
    dock: bottom;
}

#command-input {
    background: $bg-header;
    color: $accent-cyan;
    border: none;
}
